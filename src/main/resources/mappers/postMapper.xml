<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.bbar.sns.post.repository.PostRepository">
 	<insert id="insertPost" parameterType="map">
        INSERT INTO `post`
        (
        	`userId`
        	, `contents`
        	, `imagePath`
        	, `createdAt`
        	, `updatedAt`
        )
        VALUES
        (
        	#{userId}
        	, #{contents}
        	, #{imagePath}
        	, NOW()
        	, NOW()
        )
    </insert>
    
    <select id="selectPost" parameterType="map"
 	resultType="com.bbar.sns.post.domain.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `contents`
 			, `imagePAth`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`

 	</select>
 </mapper>